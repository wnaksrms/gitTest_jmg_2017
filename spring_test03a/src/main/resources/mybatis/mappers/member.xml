<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">
<!-- 리절트 맵 정의 -->	
	<resultMap id="memResult" type="memberDTO">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="weight" column="weight" />
		<result property="height" column="height" />
		<result property="age" column="age" />
	</resultMap>	

	<select id="selectAllMemberList" resultMap="memResult"   >
	    <![CDATA[
			 select * from Member			
		]]>
	</select>
	
	<select id="overlapped" parameterType="String" resultType="String"   >
	    <![CDATA[
			 select decode(count(*),0,'false','true') as overlapped from member
			where id=#{id}		
		]]>
	</select>
	
	<select id="addMember" parameterType="com.spring.mytest03a.member.dto.MemberDTO" >
	    <![CDATA[
			 insert into Member(id,name,height,weight,age)
			 values(#{id},
			 #{name},
			 #{height},
			 #{weight},
			 #{age})		
		]]>
	</select>
	
	<select id="detail" parameterType="String" resultType="memberDTO" >
	    <![CDATA[
			select * from Member
			 where id=#{id}	
		]]>
	</select>
	
	<update id="modMember" parameterType="com.spring.mytest03a.member.dto.MemberDTO">
	    <![CDATA[
			update Member
			set name=#{name},
				height=#{height},
				weight=#{weight},
				age=#{age}
			where id=#{id}
		]]>
	</update>
	
	<delete id="delMember" parameterType="String">
	    <![CDATA[
			delete from Member
			where id=#{id}
		]]>
	</delete>
	
	<select id="login" parameterType="com.spring.mytest03a.member.dto.MemberDTO" resultType="string" >
	    <![CDATA[
			select decode(count(*),1,'true','false') as result 
			from member
			where id=#{id} 
			and passwd=#{passwd}
		]]>
	</select>
	
	
